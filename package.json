{
  "name": "@bugspotter/sdk",
  "version": "1.0.0",
  "description": "Professional bug reporting SDK with screenshots, session replay, and automatic error capture for web applications",
  "packageManager": "pnpm@9.15.0",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/bugspotter.min.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "browser": "./dist/bugspotter.min.js"
    }
  },
  "scripts": {
    "dev": "webpack --watch --mode development",
    "generate-version": "node scripts/generate-version.js",
    "prebuild": "pnpm generate-version",
    "build": "pnpm build:webpack && pnpm build:esm && pnpm build:cjs",
    "build:webpack": "webpack --mode production",
    "build:esm": "rollup -c rollup.config.js",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "prepublishOnly": "pnpm build && pnpm test",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "pretest": "pnpm generate-version",
    "test:ui": "vitest --ui",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui"
  },
  "keywords": [
    "bug-reporting",
    "error-tracking",
    "session-replay",
    "screenshot",
    "error-capture",
    "debugging",
    "monitoring",
    "frontend",
    "react",
    "vue",
    "angular",
    "typescript"
  ],
  "author": "Apex Bridge Technology",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apexbridge-tech/bugspotter-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/apexbridge-tech/bugspotter-sdk/issues"
  },
  "homepage": "https://github.com/apexbridge-tech/bugspotter-sdk#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@rrweb/types": "2.0.0-alpha.18",
    "html-to-image": "^1.11.13",
    "pako": "^2.1.0",
    "rrweb": "2.0.0-alpha.4",
    "rrweb-snapshot": "2.0.0-alpha.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^20.11.0",
    "@types/pako": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "happy-dom": "^20.0.2",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "rollup": "^4.55.1",
    "rollup-plugin-dts": "^6.3.0",
    "shx": "^0.4.0",
    "ts-loader": "^9.5.1",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "webpack": "^5.90.0",
    "webpack-cli": "^6.0.1"
  }
}
