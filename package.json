{
  "name": "@bugspotter/sdk",
  "version": "0.3.1", 
  "private": true,
  "description": "BugSpotter SDK - Browser bug reporting with session replay",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @bugspotter/core build",
    "dev": "pnpm --filter @bugspotter/core dev",
    "test": "pnpm --filter @bugspotter/core test",
    "test:watch": "pnpm --filter @bugspotter/core test:watch", 
    "test:e2e": "pnpm --filter @bugspotter/core test:e2e",
    "test:coverage": "pnpm --filter @bugspotter/core test:coverage",
    "lint": "pnpm --filter @bugspotter/core lint",
    "lint:fix": "pnpm --filter @bugspotter/core lint:fix",
    "format": "pnpm --filter @bugspotter/core format",
    "format:check": "pnpm --filter @bugspotter/core format:check"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "author": "BugSpotter Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bugspotter-sdk.git"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}